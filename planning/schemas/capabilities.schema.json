{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "capabilities.schema.json",
  "title": "Test Capabilities",
  "description": "Available test capabilities for the current environment",
  "type": "object",
  "required": ["schema_version", "capabilities"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "platform": {
      "type": "string",
      "description": "Platform identifier"
    },
    "capabilities": {
      "type": "object",
      "properties": {
        "screenshot": {
          "type": "boolean",
          "description": "Can capture screenshots"
        },
        "log_capture": {
          "type": "boolean",
          "description": "Can capture engine logs"
        },
        "input_simulation": {
          "type": "boolean",
          "description": "Can simulate input events"
        },
        "headless": {
          "type": "boolean",
          "description": "Running in headless mode"
        },
        "network": {
          "type": "boolean",
          "description": "Network access available"
        },
        "gpu": {
          "type": "boolean",
          "description": "GPU rendering available"
        }
      },
      "additionalProperties": {
        "type": "boolean"
      }
    },
    "feature_flags": {
      "type": "object",
      "additionalProperties": {
        "type": "boolean"
      },
      "description": "Additional feature flags"
    }
  }
}
