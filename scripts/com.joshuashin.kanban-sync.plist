<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.joshuashin.kanban-sync</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Users/joshuashin/Projects/TheGameJamTemplate/TheGameJamTemplate/scripts/watch-kanban.sh</string>
    </array>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/Users/joshuashin/.kanban-sync/launchd-stdout.log</string>

    <key>StandardErrorPath</key>
    <string>/Users/joshuashin/.kanban-sync/launchd-stderr.log</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin</string>
    </dict>

    <!-- Throttle restarts: wait 10 seconds before restarting if it crashes -->
    <key>ThrottleInterval</key>
    <integer>10</integer>
</dict>
</plist>
