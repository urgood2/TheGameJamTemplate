{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "status.schema.json",
  "title": "Test Status",
  "description": "Test suite execution status summary",
  "type": "object",
  "required": ["schema_version", "passed", "failed", "skipped", "passed_count", "total", "generated_at"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0",
      "description": "Schema version for compatibility checking"
    },
    "runner_version": {
      "type": "string",
      "description": "Version of the test runner"
    },
    "passed": {
      "type": "boolean",
      "description": "Whether all tests passed"
    },
    "failed": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of failed tests"
    },
    "skipped": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of skipped tests"
    },
    "passed_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of passed tests"
    },
    "total": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of tests"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 timestamp when status was generated"
    },
    "commit": {
      "type": "string",
      "description": "Git commit SHA"
    },
    "branch": {
      "type": "string",
      "description": "Git branch name"
    },
    "platform": {
      "type": "string",
      "description": "OS/architecture info"
    },
    "engine_version": {
      "type": "string",
      "description": "Game engine version"
    },
    "duration_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Total test duration in milliseconds"
    }
  }
}
